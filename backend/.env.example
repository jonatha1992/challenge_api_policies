# Database Configuration
# Opción 1: URL completa (preferida)
DB_URL=postgresql://user:password@host:5432/dbname
# Opción 2: Variables individuales (alternativa)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=challenge_teknet
# DB_USER=postgres
# DB_PASSWORD=postgres

# Server Configuration
PORT=3000
NODE_ENV=development

# Gemini Configuration (optional - for AI insights)
GEMINI_API_KEY=

# Logging
LOG_LEVEL=info

# Security
# URL(s) permitidas separadas por comas (ej: http://localhost:5173 o https://tu-app.vercel.app)
